	<input id="email" name="email" size="25" class="required email" />
	<br />
	<br />

	<label for="comment">Comment:</label>
	<textarea id="comment" name="comment" cols="50" ></textarea>
	<br />
	<br />

	<input class="submit" type="submit" value="Submit"/>

</form>