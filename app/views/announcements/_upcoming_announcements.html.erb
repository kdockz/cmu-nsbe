<div class="announcement_content">
<% if !@announcements.empty? %>	
	<h2><%= link_to image_tag('icons/bulletin_board.png', :border => 0, :class => 'title_image'), announcements_path %>&nbsp;&nbsp;News & Announcements</h2>
	<table class="datagrid">
	  <thead class="datagrid">
		<th>Title:</th>
	    <th>Date Posted:</th>
	  </thead>

	<% @announcements.each do |announcement| %>
	  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
		<td><%= link_to announcement.title, announcement %></td>
		<td><%= announcement.created_at.strftime("%B %d, %Y") %></td>
	  </tr>
	<% end %>
	</table>
<% else %>
	<p><em>No recent announcements to display.</em></p>
<% end %>
</div>